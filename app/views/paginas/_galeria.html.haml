.vista{:pagina => "inicio"} 
  %ul
    - @fotos.each do |foto|
      - stats = stats(foto.id);
      %li.thumb
        %h1.name= link_to "Picture by: @#{foto.username}", foto.instagram_link, :target => 'blank'
        .sombra

        = link_to image_tag(foto.pic_large, :width => "90%", :height => "90%"),show_path(foto), :"data-id" => foto.instagram_id
        %p= "Date: "+foto.created_at.to_date.to_s
        %p= "Comments "+ stats.comments.count.to_s