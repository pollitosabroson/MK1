#ver
  %ul
    %li 
      = link_to image_tag(@fotos.pic_large),@fotos.instagram_link, :target => 'blank', :"data-id" => @fotos.instagram_id
      %h2
        = link_to "Picture by: @#{@fotos.username}", @fotos.instagram_link, :target => 'blank'
  %p
    Ranking
    = @res
    = render 'votes/ranking'
  .comentarios
    - if flash[:notice]
      #modal
        %h2 ¡Muchas gracias!
        %p Tu comentario será revisado y aprobado en breve.
        %a#cerrar{:href=>"#"} Cerrar
    %h3 Deja un comentario
    = render 'comment/comments'
    - if @comments.empty?
      %p.note Sin comentarios por el momento.
    - else
      %ul.comentarios
        - @comments.each do |c|
          %li
            %h4
              =c.comentario
