- provide :titulo, @fotos.username 
- provide :url, "http://mk1.herokuapp.com/#{@fotos.id}"+"-"+"#{@fotos.username}"
- provide :imagen, @fotos.pic_large
//- provide :descripcion, @producto.descripcion.html_safe[0..160]
#ver{:vista=>"show"}
  %ul
    %li 
      = link_to image_tag(@fotos.pic_large, :width => 640, :height => 640),@fotos.instagram_link, :target => 'blank', :"data-id" => @fotos.instagram_id
      %h2
        = link_to "Picture by: @#{@fotos.username}", @fotos.instagram_link, :target => 'blank'
    %li.social
      %h2  Share with all your friends: 
      .fb-like{"data-action" => "like", "data-href" => "http://mk1.herokuapp.com/#{@fotos.id}"+"-"+"#{@fotos.username}", "data-layout" => "button_count", "data-share" => "true", "data-show-faces" => "true"}
      #fb-root
        :plain
          <script>(function(d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) return;
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1&appId=183182198556809";
            fjs.parentNode.insertBefore(js, fjs);
            }(document, 'script', 'facebook-jssdk'));
          </script>
      %a.twitter-share-button{"data-hashtags" => "Gti", "data-url" => "http://http://mk1.herokuapp.com/\#{@fotos.id}&quot;+&quot;-&quot;+&quot;\#{@fotos.username}", :href => "https://twitter.com/share"} Tweet
  .ranking
    %p Ranking
    = render'votes/ranking'
